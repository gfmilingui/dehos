{% extends 'base.html.twig' %}

{% block title %}Consultation du Compte Utilisateur{% endblock %}

{% block body %}
    <div class="container-fluid title-area" style="margin-bottom: 10px;">
        <h2 class="display-1 text-center">Consultation du Compte Utilisateur</h2>
    </div>
    <div class="container-fluid content-area" style="margin-bottom: 30px;">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-sm mb-3">
                    <tbody>
                        <tr>
                            <th class="table-label">#</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th class="table-label">Créé le</th>
                            <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th class="table-label">Modifié le</th>
                            <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th class="table-label">Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th class="table-label">Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>  
                    </tbody>
                </table>
                <div class="mb-3">
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-info btn-sm">
                        <i class="bi bi-pencil-square" style="color: #fff;"></i>
                        Modifier
                    </a>
                    <a href="#" class="btn btn-secondary btn-sm">
                        <i class="bi bi-printer-fill"></i>
                        Imprimer
                    </a>
                    <a href="{{ path('app_user_index') }}" class="btn btn-secondary btn-sm">
                        <i class="bi bi-backspace-fill"></i>
                        Retourner à la liste
                    </a>
                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
