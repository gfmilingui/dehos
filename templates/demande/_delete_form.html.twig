<form method="post" action="{{ path('app_demande_delete', {'id': demande.id}) }}" onsubmit="return confirm('Confirmer la suppression ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ demande.id) }}">
    <button class="btn btn-danger btn-sm">
        <i class="bi bi-trash-fill"></i>
        {{ button_label|default('Supprimer') }}
    </button>
</form>
