{% extends 'base.html.twig' %}

{% block title %}Modification du site{% endblock %}

{% block body %}
    <div class="container-fluid title-area" style="margin-bottom: 10px;">
        <h2 class="display-1 text-center">Modification du site</h2>
    </div>
    <div class="container-fluid content-area" style="margin-bottom: 30px;">
        {% for message in app.flashes('notice-site') %}
            <div class="bg-warning flash-notice mb-3 text-bold text-dark">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success-site') %}
            <div class="bg-success flash-notice mb-3 text-bold text-white">
                {{ message }}
            </div>
        {% endfor %}
        {{ include('site/_form_edit.html.twig', {'button_label': 'Update'}) }}
        <a href="#" class="btn btn-secondary btn-sm">
            <i class="bi bi-printer-fill"></i>
            Imprimer
        </a>
        <a href="{{ path('app_site_index') }}" class="btn btn-secondary btn-sm">
            <i class="bi bi-backspace-fill"></i>
            Retourner Ã  la liste
        </a>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/assets/app/js/appSite.js"></script>
{% endblock %}