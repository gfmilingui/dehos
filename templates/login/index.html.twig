{# templates/login/index.html.twig #}
{% extends 'base-login.html.twig' %}

{% block navbar %}
    {# ... Display nothing ... #}
{% endblock %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container-fluid" style="margin: 0px; padding: 10%;">
            <div class="login-box">
                <form action="{{ path('app_login') }}" method="post">
                    <div class="row mb-3">
                        <div class="col-md-4"></div>
                        <div class="col-md-4 text-center mb-3">
                            <a class="" href="/">
                                <img src="/assets/img/logo.png" alt="DEHOS App"class="d-inline-block align-text-top">
                            </a>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4"></div>
                        <div class="col-md-4 text-center mb-3">
                            <label for="username" class="form-label">Email</label>
                            <input type="text" id="username" class="form-control form-control-sm" name="_username" value="{{ last_username }}" placeholder="Saisir l'email"/>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4"></div>
                        <div class="col-md-4 text-center">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" id="password" class="form-control form-control-sm" name="_password" placeholder="Saisir le mot de passe"/>
                        </div>
                        <div class="col-md-4"></div>
                    </div>
                    {# If you want to control the URL the user is redirected to on success
                    <input type="hidden" name="_target_path" value="/"/> #}

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    
                    <div class="row mb-3">
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-info btn-sm text-bold text-center">
                                <i class="bi bi-box-arrow-in-right" style="color: #fff;"></i>
                                Se connecter
                            </button>
                        </div>
                    </div>

                    <div class="login-error text-bold text-danger text-center">
                        {% if error %}
                            <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        {% endif %}
                    </div>
                </form>
            <div>
    </div>
{% endblock %}